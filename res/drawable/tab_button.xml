<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid android:color="#32CD32"/>
            <stroke
                android:width="0.5dp"
                />
            <padding
                android:left="5dp"
                android:top="1dp"
                android:right="5dp"
                android:bottom="1dp" />
        </shape>
    </item>
    <item android:state_selected="true" >
        <shape>
            <solid android:color="#32CD32"/>
            <stroke
           		android:width="0.5dp"
                />
            <padding
                android:left="5dp"
                android:top="1dp"
                android:right="5dp"
                android:bottom="1dp" />
        </shape>
    </item>

    <item>        
